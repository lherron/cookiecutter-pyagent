# {{ cookiecutter.project_name }} Configuration Sample

# LLM Configuration (Optional)
# Uncomment and configure if you need LLM capabilities
# llm:
#   provider: anthropic # Or 'gemini'
#   anthropic:
#     # api_key: your_anthropic_api_key_here # Alternatively, set ANTHROPIC_API_KEY env var
#     model: claude-3-sonnet-20240229
#     max_tokens: 2000
#     temperature: 0.7
#   gemini:
#     # api_key: your_gemini_api_key_here # Alternatively, set GEMINI_API_KEY env var
#     model: gemini-1.5-flash

# Prefect Configuration (Required)
prefect:
  project_name: {{cookiecutter.project_slug}} # Default: {{cookiecutter.project_slug}}. Env: PREFECT_PROJECT_NAME
  flow_name: {{cookiecutter.project_name}} Flow # Default: {{cookiecutter.project_name}} Flow. Env: PREFECT_FLOW_NAME
  schedule_interval_minutes: 30 # Default: 30. Env: PREFECT_SCHEDULE_INTERVAL_MINUTES

# Path to Jinja2 prompt template (Optional, if using LLM)
prompt_template_path: "templates/prompt.jinja2" # Default: templates/prompt.jinja2. Env: PROMPT_TEMPLATE_PATH

# --- Add other service configurations below as needed ---
